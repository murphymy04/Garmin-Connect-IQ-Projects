<layout id="MainLayout" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://developer.garmin.com/downloads/connect-iq/resources.xsd">
    <!-- BPM display -->
    <label id="bpmLabel"
           x="center" y="center"
           text="@Strings.bpmLabel"
           justification="Graphics.TEXT_JUSTIFY_CENTER"/>

    <button x="center" y="50" width="70" height="70"> 
        <state id="stateDefault" bitmap="@Drawables.PlusBtn" />
        <state id="stateHighlighted" bitmap="@Drawables.PlusBtn" />
        <state id="stateSelected" color="Graphics.COLOR_RED" />
        <state id="stateDisabled" color="Graphics.COLOR_BLACK" />
        <param name="behavior">onPlusBtn</param>
    </button>
    <button x="center" y="270" width="70" height="70">
        <state id="stateDefault" bitmap="@Drawables.MinusBtn" />
        <state id="stateHighlighted" bitmap="@Drawables.MinusBtn" />
        <state id="stateSelected" color="Graphics.COLOR_RED" />
        <state id="stateDisabled" color="Graphics.COLOR_BLACK" />
        <param name="behavior">onMinusBtn</param>
    </button>
</layout>
